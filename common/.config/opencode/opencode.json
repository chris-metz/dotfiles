{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "find *": "allow",
      "gh issue *": "allow",
      "gh repo list": "allow",
      "gh repo list *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git ls-files": "allow",
      "git ls-files *": "allow",
      "git ls-tree *": "allow",
      "git rev-parse *": "allow",
      "git cat-file *": "allow",
      "git blame *": "allow",
      "grep *": "allow"
    },
    "edit": "ask",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "skill": "allow",
    "todowrite": "ask",
    "todoread": "allow",
    "webfetch": "allow",
    "question": "allow"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  }
  // "tui": {
